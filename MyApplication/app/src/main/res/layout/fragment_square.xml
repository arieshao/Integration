<?xml version="1.0" encoding="utf-8"?>
<com.ybao.pullrefreshview.layout.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <vip.xuanhao.integration.views.ui.ExpandHeaderView
        android:id="@+id/square_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <vip.xuanhao.integration.views.ui.ExpandFooterView
        android:id="@+id/square_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_square_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:divider="#ccc"
        android:dividerHeight="1px" />

</com.ybao.pullrefreshview.layout.PullRefreshLayout>